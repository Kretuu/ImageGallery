<div class="position-relative text-center bg-body-secondary">
  <div class="img-container w-100 h-100 ratio" style="--bs-aspect-ratio: 25%">
    <% if @photo_gallery.thumbnail %>
      <img src="<%= @photo_gallery.thumbnail %>"
           class="object-fit-cover bg-dark h-100" alt="">
    <% end %>
    <div class="col-md-6 p-lg-5 mx-auto my-5">
      <h1 class="display-3 fw-bold"><%= @photo_gallery.name %></h1>
      <h3 class="fw-normal text-muted mb-3">Author: <%= @photo_gallery.user.name %></h3>
      <div class="d-flex gap-3 justify-content-center lead fw-normal">
        <button class="icon-link" onclick="FullscreenMode.loadImage('<%= photo_gallery_photo_path(@photo_gallery, 1) %>')">
          Slideshow
          <svg class="bi"><use xlink:href="#chevron-right"/></svg>
        </button>
        <% if can? :manage, @photo_gallery %>
          <%= link_to "Edit gallery", edit_photo_gallery_path(@photo_gallery), class: "icon-link" %>
          <a class="icon-link" href="#">
            Add photo
            <svg class="bi"><use xlink:href="#chevron-right"/></svg>
          </a>
        <% end %>
      </div>
    </div>
  </div>

</div>

